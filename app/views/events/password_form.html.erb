
<h1><%= t('form.pin_access') %></h1>

<%= form_tag('', method: 'post', data: {turbo: false}) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <%= label t('form.pin'), :pincode %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
<%= link_to t('form.main_page'), events_path %>
