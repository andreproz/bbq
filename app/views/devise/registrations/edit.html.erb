<h2><%= t('form.edit') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group col-md-6">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
  </div>

  <div class="field form-group col-md-6">
    <%= f.label :password %>
    <small><%= t('form.left_empty') %>></small><br/>
    <% if @minimum_password_length %>
      <em><%= t('form.minimal_length') %> <%= @minimum_password_length %> </em>
    <% end %>
    <%= f.password_field :password, autocomplete: t('form.new_password'), class: "form-control mb-2" %>
  </div>

  <div class="field form-group col-md-6">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: t('form.new_password'), class: "form-control mb-2" %>
  </div>

  <div class="field form-group col-md-6">
    <%= f.label :current_password %> <i><%= t('form.current_password_for_confirmation') %></i><br/>
    <%= f.password_field :current_password, autocomplete: t('form.current_password'), class: "form-control mb-2" %>
  </div>

  <div class="actions">
    <%= f.submit t('buttons.save'), class: "btn btn-primary my-2" %>
  </div>
<% end %>

<%= button_to t('actions.account.delete'), registration_path(resource_name), data: { turbo_confirm: t('actions.account.destroy_confirm') },\
    method: :delete, class: 'btn btn-danger my-3' %>

<%= link_to t('buttons.go_back'), :back, class: "link" %>
