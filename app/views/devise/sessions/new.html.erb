<h2 class="mt-2"><%= t('form.login') %></h2>

<%= form_for(resource, as: resource_name, data: {turbo: false}, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group col-md-6">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
  </div>

  <div class="field form-group col-md-6">
    <%= f.label :password %><br/>
    <%= f.password_field :password, autocomplete: t('form.current_password'), class: "form-control mb-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group col-md-6">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('actions.sign_in'), class: "btn btn-primary my-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
