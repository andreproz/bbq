<h2 class="mt-3"><%= t('form.forgot_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div  class="field form-group col-md-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
  </div>

  <div class="actions">
    <%= f.submit t('actions.send_instruction'), class: "btn btn-primary my-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
