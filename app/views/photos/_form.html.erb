<%= form_for [@event, photo], html: { multipart: true }, data: {turbo: false} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: photo} %>

  <div class="form-group">
    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control group-file mt-2" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit t('buttons.upload'), class: 'btn btn-primary' %>
  </div>
<% end %>
